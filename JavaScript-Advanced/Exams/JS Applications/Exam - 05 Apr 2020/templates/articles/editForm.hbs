<form action="#/edit/{{objectId}}" method="POST">
    <fieldset>
        <legend>Edit article</legend>
        <p class="field title">
            <input type="text" name="title" value={{title}} id="title" placeholder="Arrays">
            <label for="title">Title:</label>
        </p>

        <p class="field category">
            <input type="text" name="category" value={{category}} id="category" placeholder="JavaScript">
            <label for="category">Category:</label>
        </p>
        <p class="field content">
            <textarea name="content" id="content">{{content}}</textarea>
            <label for="content">Content:</label>
        </p>

        <p class="field submit">
            <button class="btn submit" type="submit">Edit</button>
        </p>

    </fieldset>
</form>