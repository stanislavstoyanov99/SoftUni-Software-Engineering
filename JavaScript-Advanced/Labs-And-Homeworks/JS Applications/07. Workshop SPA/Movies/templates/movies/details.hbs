{{>header}}
<div id="detailsMovie">
    <h1>Details</h1>
    <div class="movie">
        {{#with movie}}
        <h2>Title: {{title}}</h2>
        <img src="{{image}}"/>
        <p>{{description}}</p>
        <h2>Genres</h2>
        <ul class="genres">
            <li>{{genres}}</li>
        </ul>
        <p>Available Tickets: {{tickets}}</p>
        <button><a href="#/buy/{{objectId}}">Buy Ticket</a></button>
        {{/with}}
    </div>
</div>
{{>footer}}