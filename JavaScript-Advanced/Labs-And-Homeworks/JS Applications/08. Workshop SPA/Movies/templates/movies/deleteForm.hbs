{{>header}}
<div id="deleteMovie">
    <h1>Delete movie</h1>
    {{#with movie}}
    <form action="#/delete/{{objectId}}" method="POST">
        <label>Title</label>
        <input type="text" name="title" value="{{title}}" disabled="">
        <label>Image Url</label>
        <input type="text" name="image" value="{{image}}" disabled="" />
        <label>Description</label>
        <textarea type="text" name="description" disabled="">{{description}}</textarea>
        <label>Genres</label>
        <input type="text" name="genres" value="{{genres}}" disabled="">
        <label>Available Tickets</label>
        <input type="number" name="tickets" value="{{tickets}}" disabled="">
        <input type="submit" value="Delete">
    </form>
    {{/with}}
</div>
{{>footer}}